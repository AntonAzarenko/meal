<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.azarenka.api.MenuRepository">

    <resultMap type="Menu" id="menu">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="food_id" property="foodId"/>
        <result column="day_id" property="dayId"/>
        <result column="meal_id" property="mealId"/>
        <result column="email" property="email"/>
        <result column="date" property="date"/>
        <result column="sets_name" property="setTitle"/>
    </resultMap>

    <select id="getMenu" resultMap="menu">
        SELECT
            id,
            user_id,
            food_id,
            day_id,
            meal_id,
            email,
            date,
            sets_name
        FROM home.menu
        WHERE user_id = #{userId}
    </select>
</mapper>